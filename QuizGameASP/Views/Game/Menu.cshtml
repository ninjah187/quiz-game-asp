@model QuizGameASP.Models.User

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #user-name {
        text-align: center;
        color: white;
    }

    #menu-container {
        width: 100%;
        margin-left: auto;
        margin-right: auto;
    }

    .menu-form {
        width: 80%;
        margin-left: auto;
        margin-right: auto;
    }

    .menu-button {
        width: 100%;
        height: 70px;
        background-color: #5dbbff;
        border-radius: 20px 20px 20px 20px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 20px;
        border: 0;
        font-weight: bold;
        font-size: 30px;
        color: white;
    }

        .menu-button:hover
        {
            background-color: #b6ffff;
        }
</style>

<div id="user-name">
    <h2>@Html.DisplayFor(u => u.Login)</h2>
</div>

<div id="menu-container">
    <form action="/Matchmaking/JoinQueue?id=@Model.ID" method="post" class="menu-form">
        <button type="submit" class="menu-button">Nowa gra</button>
    </form>
</div>

<script>
    $.ajax({
        url: "/Matchmaking/UserQueue/",
        dataType: "html",
        success: function (data) {
            $("#menu-container").append(data);
        },
        error: function () {
            alert("BŁĄD!");
        }
    });
</script>
